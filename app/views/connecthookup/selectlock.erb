
選択可能なRemoteLockの一覧

<style type="text/css">
            #table {
                display:table;
                width:100%;
                }
            .row {
                display:table-row;
                }
            .row>div {
                display:table-cell;
                margin:15px;
                padding:15px;
                text-align:center;
                border:1px solid;
                background-color:#eee;
            }
</style>
<br><hr><br>
<%= form_tag pairs_decide_path do %>
    <div id="table">
        <dib style="display:table width:60%">
        <% @locks.each do |lock| %>
            <div class="row">
                <div><input type="radio" name="lockid" value = <%= lock[2] %> ></div><div><%= lock[0] %></div><div><%= lock[1] %></div><div><%= lock[2] %></div>
            </div>
        <% end %>
    </div>
    <br>
    
    <input type="submit" value="送信" class="btn primary-btn">
<%end%>
